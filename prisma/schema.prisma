// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}



model User {
  id            String    @id @default(cuid())
  name          String?
  password      String
  type          String
  bio           String?
  email         String?   @unique
  image         String?

}


model Report {
  id           String    @id @default(uuid())
  title        String? 
  ClientInformation String?  @db.LongText
  Date         DateTime?
  Details      String?
  Request      String?
  CreatedAt    DateTime  @default(now())
  @@index([id])
}

model Request {
  id           String    @id @default(uuid())
  title        String? 
  description String?  @db.LongText
  Date         DateTime?
  CreatedAt    DateTime  @default(now())
  @@index([id])
}